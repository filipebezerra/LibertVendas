<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.libertsolutions.libertvendas.app"
    >

    <application
        android:name=".LibertVendasApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Libert.Theme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning,UnusedAttribute"
        >
        <activity
            android:name=".presentation.launch.LaunchActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Libert.Theme.NoActionBar.FullScreen"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:noHistory="true"
            android:theme="@style/Libert.Theme.NoActionBar.Settings"
            />
        <activity
            android:name=".presentation.login.LoginActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_login_activity"
            android:noHistory="true"
            android:theme="@style/Libert.Theme.NoActionBar"
            android:windowSoftInputMode="stateVisible|adjustResize"
            />
        <activity
            android:name=".presentation.home.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/Libert.Theme.NoActionBar"
            />
        <activity
            android:name=".presentation.pedido.PedidoActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_pedido"
            android:parentActivityName=".presentation.home.HomeActivity"
            android:theme="@style/Libert.Theme.NoActionBar"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.libertsolutions.libertvendas.app.presentation.home.HomeActivity"
                />
        </activity>
        <activity
            android:name=".presentation.cliente.ClienteActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_cliente"
            android:theme="@style/Libert.Theme.NoActionBar"
            />
    </application>

</manifest>
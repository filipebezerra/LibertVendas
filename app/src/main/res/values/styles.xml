<resources>

    <style name="Libert.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Libert.Theme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Libert.Theme.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Libert.Theme.NoActionBar.Settings" parent="@style/PreferenceFixTheme.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="textColorError">@color/color_error</item>
    </style>

    <style name="Libert.Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Libert.Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.Libert" parent="@android:style/Widget" />

    <style name="Widget.Libert.FloatingActionButton" parent="@style/Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="Widget.Libert.FormInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Widget.Libert.EditableField" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="Widget.Libert.NonEditableField" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:longClickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="Widget.Libert.Sheet" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/sheet_spacing</item>
        <item name="android:layout_marginBottom">@dimen/sheet_spacing</item>
        <item name="android:layout_marginLeft">@dimen/sheet_spacing</item>
        <item name="android:layout_marginRight">@dimen/sheet_spacing</item>
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardElevation">@dimen/fab_sheet_elevation</item>
        <item name="cardMaxElevation">@dimen/fab_sheet_elevation</item>
        <item name="contentPadding">-3dp</item>
    </style>

    <style name="TextAppearance.Libert.Sheet.Item" parent="">
        <item name="android:layout_width">@dimen/sheet_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/sheet_item_spacing</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/sheet_item_textsize</item>
        <item name="android:textColor">@color/text_black_87</item>
        <item name="android:drawablePadding">@dimen/sheet_item_image_spacing</item>
    </style>

    <style name="Widget.Libert.RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/keyline_medium</item>
        <item name="android:paddingBottom">@dimen/keyline_medium</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="layoutManager">android.support.v7.widget.LinearLayoutManager</item>
    </style>

    <style name="Widget.Libert.CardView" parent="@style/CardView">
        <item name="android:id">@id/card_view</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/keyline_medium</item>
        <item name="android:layout_marginRight">@dimen/keyline_medium</item>
        <item name="android:layout_marginBottom">@dimen/keyline_medium</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/list_selector</item>
        <item name="contentPadding">@dimen/keyline_large</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_cadastro_cliente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/keyline_xlarge"
    android:paddingRight="@dimen/keyline_xlarge"
    android:paddingTop="@dimen/keyline_large"
    android:paddingBottom="@dimen/keyline_large"
    android:clipToPadding="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_cadastro_cliente"
    tools:context=".presentation.cadastrocliente.CadastroClienteActivity"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        >

        <TableRow>
            <ImageView
                android:layout_width="@dimen/keyline_icon"
                android:layout_height="@dimen/keyline_icon"
                android:layout_gravity="center_vertical"
                android:importantForAccessibility="no"
                app:srcCompat="@drawable/ic_business_grey_24dp"
                />

            <smtchahal.materialspinner.MaterialSpinner
                android:id="@+id/spinner_tipo_pessoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/keyline_large"
                android:layout_marginStart="@dimen/keyline_large"
                app:ms_multiline="false"
                app:ms_hint="@string/hint_tipo_pessoa"
                app:ms_enableFloatingLabel="true"
                app:ms_floatingLabelText="@string/label_tipo_pessoa"
                />
        </TableRow>

        <TableRow>
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.LibertApp.FormInputLayout"
                android:id="@+id/input_layout_cpf_ou_cnpj"
                android:layout_marginLeft="@dimen/keyline_large"
                android:layout_marginStart="@dimen/keyline_large"
                android:layout_column="1"
                >

                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.LibertApp.EditableField"
                    android:id="@+id/edit_text_cpf_ou_cnpj"
                    android:hint="@string/hint_cpf_ou_cnpj"
                    android:inputType="numberSigned"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />

            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow>
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.LibertApp.FormInputLayout"
                android:id="@+id/input_layout_nome_cliente"
                android:layout_marginLeft="@dimen/keyline_large"
                android:layout_marginStart="@dimen/keyline_large"
                android:layout_column="1"
                >

                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.LibertApp.EditableField"
                    android:id="@+id/edit_text_nome_cliente"
                    android:hint="@string/hint_nome_cliente"
                    android:inputType="text|textCapWords"
                    android:imeOptions="actionNext"
                    />

            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow>
            <ImageView
                android:layout_width="@dimen/keyline_icon"
                android:layout_height="@dimen/keyline_icon"
                android:layout_gravity="center_vertical"
                android:importantForAccessibility="no"
                app:srcCompat="@drawable/ic_email_grey_24dp"
                />

            <android.support.design.widget.TextInputLayout
                style="@style/Widget.LibertApp.FormInputLayout"
                android:id="@+id/input_layout_email"
                android:layout_marginLeft="@dimen/keyline_large"
                android:layout_marginStart="@dimen/keyline_large"
                >

                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.LibertApp.EditableField"
                    android:id="@+id/edit_text_email"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    />

            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow>
            <ImageView
                android:layout_width="@dimen/keyline_icon"
                android:layout_height="@dimen/keyline_icon"
                android:layout_gravity="center_vertical"
                android:importantForAccessibility="no"
                app:srcCompat="@drawable/ic_place_grey_24dp"
                />

            <android.support.design.widget.TextInputLayout
                style="@style/Widget.LibertApp.FormInputLayout"
                android:id="@+id/input_layout_endereco"
                android:layout_marginLeft="@dimen/keyline_large"
                android:layout_marginStart="@dimen/keyline_large"
                android:layout_column="1"
                >

                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.LibertApp.EditableField"
                    android:id="@+id/edit_text_endereco"
                    android:hint="@string/hint_endereco"
                    android:inputType="text|textCapWords"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    />

            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow>
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.LibertApp.FormInputLayout"
                android:id="@+id/input_layout_numero"
                android:layout_marginLeft="@dimen/keyline_large"
                android:layout_marginStart="@dimen/keyline_large"
                android:layout_column="1"
                >

                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.LibertApp.EditableField"
                    android:id="@+id/edit_text_numero"
                    android:hint="@string/hint_numero"
                    android:inputType="numberSigned"
                    android:maxLength="6"
                    android:imeOptions="actionNext"
                    />

            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow>
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.LibertApp.FormInputLayout"
                android:id="@+id/input_layout_bairro"
                android:layout_marginLeft="@dimen/keyline_large"
                android:layout_marginStart="@dimen/keyline_large"
                android:layout_column="1"
                >

                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.LibertApp.EditableField"
                    android:id="@+id/edit_text_bairro"
                    android:hint="@string/hint_bairro"
                    android:inputType="text|textCapWords"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    />

            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow>
            <smtchahal.materialspinner.MaterialSpinner
                android:id="@+id/spinner_estados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/keyline_large"
                android:layout_marginStart="@dimen/keyline_large"
                android:layout_column="1"
                app:ms_multiline="false"
                app:ms_hint="@string/hint_estados"
                app:ms_enableFloatingLabel="true"
                app:ms_floatingLabelText="@string/label_estado"
                />
        </TableRow>

        <TableRow>
            <smtchahal.materialspinner.MaterialSpinner
                android:id="@+id/spinner_cidades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/keyline_large"
                android:layout_marginStart="@dimen/keyline_large"
                android:layout_column="1"
                app:ms_multiline="false"
                app:ms_hint="@string/hint_cidades"
                app:ms_enableFloatingLabel="true"
                app:ms_floatingLabelText="@string/label_cidade"
                />
        </TableRow>

        <TableRow>
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.LibertApp.FormInputLayout"
                android:id="@+id/input_layout_cep"
                android:layout_marginLeft="@dimen/keyline_large"
                android:layout_marginStart="@dimen/keyline_large"
                android:layout_column="1"
                >

                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.LibertApp.EditableField"
                    android:id="@+id/edit_text_cep"
                    android:hint="@string/hint_cep"
                    android:inputType="numberSigned"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:maxLength="8"
                    />

            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow>
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.LibertApp.FormInputLayout"
                android:id="@+id/input_layout_complemento"
                android:layout_marginLeft="@dimen/keyline_large"
                android:layout_marginStart="@dimen/keyline_large"
                android:layout_column="1"
                >

                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.LibertApp.EditableField"
                    android:id="@+id/edit_text_complemento"
                    android:hint="@string/hint_complemento"
                    android:inputType="text|textCapSentences"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    />

            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow>
            <ImageView
                android:layout_width="@dimen/keyline_icon"
                android:layout_height="@dimen/keyline_icon"
                android:layout_gravity="center_vertical"
                android:importantForAccessibility="no"
                app:srcCompat="@drawable/ic_phone_grey_24dp"
                />

            <android.support.design.widget.TextInputLayout
                style="@style/Widget.LibertApp.FormInputLayout"
                android:id="@+id/input_layout_telefone"
                android:layout_marginLeft="@dimen/keyline_large"
                android:layout_marginStart="@dimen/keyline_large"
                android:layout_column="1"
                >

                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.LibertApp.EditableField"
                    android:id="@+id/edit_text_telefone"
                    android:hint="@string/hint_telefone"
                    android:inputType="phone"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:maxLength="11"
                    />

            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow>

            <android.support.design.widget.TextInputLayout
                style="@style/Widget.LibertApp.FormInputLayout"
                android:id="@+id/input_layout_celular"
                android:layout_marginLeft="@dimen/keyline_large"
                android:layout_marginStart="@dimen/keyline_large"
                android:layout_column="1"
                >

                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.LibertApp.EditableField"
                    android:id="@+id/edit_text_celular"
                    android:hint="@string/hint_celular"
                    android:inputType="phone"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:maxLength="11"
                    />

            </android.support.design.widget.TextInputLayout>
        </TableRow>

    </TableLayout>

</android.support.v4.widget.NestedScrollView>

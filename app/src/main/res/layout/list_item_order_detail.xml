<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        style="@style/Widget.LibertApp.CardView"
        android:clickable="false"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/text_view_produto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/keyline_medium"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="@string/example_text_nome_produto"
                />

            <TextView
                android:id="@+id/text_view_preco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/keyline_medium"
                android:layout_below="@id/text_view_produto"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:lines="1"
                android:ellipsize="end"
                tools:text="@string/example_text_preco_produto"
                />

            <TextView
                android:id="@+id/text_view_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_preco"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:lines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                tools:text="@string/example_text_total_pedido"
                />

            <TextView
                android:id="@+id/text_view_quantidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/text_view_produto"
                android:layout_alignBaseline="@id/text_view_total"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:text="@string/text_qtde_inicial_produto"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/text_view_quantidade"
                android:layout_toStartOf="@id/text_view_quantidade"
                android:layout_alignBaseline="@id/text_view_total"
                android:paddingLeft="@dimen/keyline_medium"
                android:paddingStart="@dimen/keyline_medium"
                android:paddingRight="@dimen/keyline_medium"
                android:paddingEnd="@dimen/keyline_medium"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="@string/text_quantidade"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
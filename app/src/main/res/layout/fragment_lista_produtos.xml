<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_lista_produtos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.listaprodutos.ListaProdutosFragment"
    >

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.RecyclerView
            style="@style/Widget.LibertApp.RecyclerView"
            android:id="@+id/recycler_view_produtos"
            tools:listitem="@layout/list_item_produto"
            />
    </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_finalizando_pedido"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/keyline_xlarge"
    android:paddingRight="@dimen/keyline_xlarge"
    android:paddingTop="@dimen/keyline_large"
    android:paddingBottom="@dimen/keyline_large"
    android:clipToPadding="false"
    tools:context=".presentation.cadastropedido.finalizando.FinalizandoPedidoFragment"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        >

        <TableRow>
            <ImageView
                android:layout_width="@dimen/keyline_icon"
                android:layout_height="@dimen/keyline_icon"
                android:layout_gravity="center_vertical"
                android:importantForAccessibility="no"
                app:srcCompat="@drawable/ic_event_grey_24dp"
                />

            <android.support.design.widget.TextInputLayout
                style="@style/Widget.LibertApp.FormInputLayout"
                android:id="@+id/input_layout_data_emissao"
                >

                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.LibertApp.NonEditableField"
                    android:layout_marginLeft="@dimen/keyline_large"
                    android:layout_marginStart="@dimen/keyline_large"
                    android:id="@+id/edit_text_data_emissao"
                    android:hint="@string/hint_data_emissao"
                    />

            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow>
            <ImageView
                android:layout_width="@dimen/keyline_icon"
                android:layout_height="@dimen/keyline_icon"
                android:layout_gravity="center_vertical"
                android:importantForAccessibility="no"
                app:srcCompat="@drawable/ic_people_grey_24dp"
                />

            <android.support.design.widget.TextInputLayout
                style="@style/Widget.LibertApp.FormInputLayout"
                android:id="@+id/input_layout_cliente"
                >

                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.LibertApp.NonEditableField"
                    android:layout_marginLeft="@dimen/keyline_large"
                    android:layout_marginStart="@dimen/keyline_large"
                    android:id="@+id/edit_text_cliente"
                    android:hint="@string/hint_cliente"
                    />

            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow>
            <ImageView
                android:layout_width="@dimen/keyline_icon"
                android:layout_height="@dimen/keyline_icon"
                android:layout_gravity="center_vertical"
                android:importantForAccessibility="no"
                app:srcCompat="@drawable/ic_attach_money_grey_24dp"
                />

            <android.support.design.widget.TextInputLayout
                style="@style/Widget.LibertApp.FormInputLayout"
                android:id="@+id/input_layout_total_produtos"
                >

                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.LibertApp.NonEditableField"
                    android:id="@+id/edit_text_total_produtos"
                    android:layout_marginLeft="@dimen/keyline_large"
                    android:layout_marginStart="@dimen/keyline_large"
                    android:hint="@string/hint_total_produtos"
                    android:text="@string/text_total_produtos"
                    />

            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow>
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.LibertApp.FormInputLayout"
                android:id="@+id/input_layout_desconto"
                android:layout_marginLeft="@dimen/keyline_large"
                android:layout_marginStart="@dimen/keyline_large"
                android:layout_column="1"
                >

                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.LibertApp.EditableField"
                    android:id="@+id/edit_text_desconto"
                    android:hint="@string/hint_desconto"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionNext"
                    />

            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow>
            <smtchahal.materialspinner.MaterialSpinner
                android:id="@+id/spinner_forma_pagamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/keyline_large"
                android:layout_marginStart="@dimen/keyline_large"
                android:layout_column="1"
                app:ms_multiline="false"
                app:ms_hint="@string/hint_forma_pagamento"
                app:ms_enableFloatingLabel="true"
                app:ms_floatingLabelText="@string/label_forma_pagamento"
                />
        </TableRow>

        <TableRow>
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.LibertApp.FormInputLayout"
                android:id="@+id/input_layout_observacao"
                android:layout_marginLeft="@dimen/keyline_large"
                android:layout_marginStart="@dimen/keyline_large"
                android:layout_column="1"
                >

                <android.support.design.widget.TextInputEditText
                    style="@style/Widget.LibertApp.MultilineEditableField"
                    android:id="@+id/edit_text_observacao"
                    android:hint="@string/hint_observacao"
                    android:imeOptions="actionDone"
                    />

            </android.support.design.widget.TextInputLayout>
        </TableRow>

    </TableLayout>

</android.support.v4.widget.NestedScrollView>
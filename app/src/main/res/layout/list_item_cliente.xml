<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        style="@style/Widget.LibertApp.CardView"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/text_view_razao_social"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/keyline_medium"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                tools:text="@string/example_text_razao_social"
                />

            <TextView
                android:id="@+id/text_view_nome_fantasia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/keyline_medium"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:text="@string/example_nome_fantasia"
                />

            <TextView
                android:id="@+id/text_view_cpf_ou_cnpj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/vector_ic_business_grey_24dp"
                android:drawableStart="@drawable/vector_ic_business_grey_24dp"
                android:paddingBottom="@dimen/keyline_medium"
                android:drawablePadding="@dimen/keyline_large"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                tools:text="@string/example_text_cpf_ou_cnpj"
                />

            <TextView
                android:id="@+id/text_view_telefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/vector_ic_phone_grey_24dp"
                android:drawableStart="@drawable/vector_ic_phone_grey_24dp"
                android:paddingBottom="@dimen/keyline_medium"
                android:drawablePadding="@dimen/keyline_large"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                tools:text="@string/example_text_telefone"
                />

            <TextView
                android:id="@+id/text_view_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/vector_ic_email_grey_24dp"
                android:drawableStart="@drawable/vector_ic_email_grey_24dp"
                android:drawablePadding="@dimen/keyline_large"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                tools:text="@string/example_text_email"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
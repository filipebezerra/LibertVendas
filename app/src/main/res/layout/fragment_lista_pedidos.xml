<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.listapedidos.ListaPedidosFragment"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.v7.widget.RecyclerView
            style="@style/Widget.LibertApp.RecyclerView"
            android:id="@+id/recycler_view_pedidos"
            android:visibility="visible"
            tools:visibility="gone"
            tools:listitem="@layout/list_item_pedido"
            />

        <LinearLayout
            android:id="@id/empty_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone"
            tools:visibility="visible"
            >

            <ImageView
                android:id="@id/empty_image"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:contentDescription="@string/text_empty_tagline_pedidos"
                app:srcCompat="@drawable/ic_list"
                />

            <TextView
                android:id="@id/empty_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/text_empty_tagline_pedidos"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                />
        </LinearLayout>
    </FrameLayout>
</android.support.v4.widget.SwipeRefreshLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_cliente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_cliente"
    tools:context=".presentation.cliente.ClienteActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <smtchahal.materialspinner.MaterialSpinner
            android:id="@+id/spinner_tipo_pessoa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            app:ms_multiline="false"
            app:ms_hint="@string/hint_tipo_pessoa"
            app:ms_enableFloatingLabel="true"
            app:ms_floatingLabelText="@string/label_tipo_pessoa"
            />

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.Libert.FormInputLayout"
            android:id="@+id/input_layout_cpf_ou_cnpj"
            >

            <android.support.design.widget.TextInputEditText
                style="@style/Widget.Libert.EditableField"
                android:id="@+id/edit_text_cpf_ou_cnpj"
                android:drawableLeft="@drawable/vector_ic_business_grey_24dp"
                android:drawableStart="@drawable/vector_ic_business_grey_24dp"
                android:drawablePadding="32dp"
                android:hint="@string/hint_cpf_ou_cnpj"
                android:inputType="numberSigned"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.Libert.FormInputLayout"
            android:id="@+id/input_layout_nome_cliente"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            >

            <android.support.design.widget.TextInputEditText
                style="@style/Widget.Libert.EditableField"
                android:id="@+id/edit_text_nome_cliente"
                android:hint="@string/hint_nome_cliente"
                android:inputType="text|textCapWords"
                android:imeOptions="actionNext"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.Libert.FormInputLayout"
            android:id="@+id/input_layout_email"
            >

            <android.support.design.widget.TextInputEditText
                style="@style/Widget.Libert.EditableField"
                android:id="@+id/edit_text_email"
                android:drawableLeft="@drawable/vector_ic_email_grey_24dp"
                android:drawableStart="@drawable/vector_ic_email_grey_24dp"
                android:drawablePadding="32dp"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.Libert.FormInputLayout"
            android:id="@+id/input_layout_logradouro"
            >

            <android.support.design.widget.TextInputEditText
                style="@style/Widget.Libert.EditableField"
                android:id="@+id/edit_text_logradouro"
                android:drawableLeft="@drawable/vector_ic_place_grey_24dp"
                android:drawableStart="@drawable/vector_ic_place_grey_24dp"
                android:drawablePadding="32dp"
                android:hint="@string/hint_logradouro"
                android:inputType="text|textCapWords"
                android:imeOptions="actionNext"
                android:maxLines="1"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.Libert.FormInputLayout"
            android:id="@+id/input_layout_numero"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            >

            <android.support.design.widget.TextInputEditText
                style="@style/Widget.Libert.EditableField"
                android:id="@+id/edit_text_numero"
                android:hint="@string/hint_numero"
                android:inputType="numberSigned"
                android:maxLength="6"
                android:imeOptions="actionNext"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.Libert.FormInputLayout"
            android:id="@+id/input_layout_bairro"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            >

            <android.support.design.widget.TextInputEditText
                style="@style/Widget.Libert.EditableField"
                android:id="@+id/edit_text_bairro"
                android:hint="@string/hint_bairro"
                android:inputType="text|textCapWords"
                android:imeOptions="actionNext"
                android:maxLines="1"
                />

        </android.support.design.widget.TextInputLayout>

        <smtchahal.materialspinner.MaterialSpinner
            android:id="@+id/spinner_uf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            app:ms_multiline="false"
            app:ms_hint="@string/hint_uf"
            app:ms_enableFloatingLabel="true"
            app:ms_floatingLabelText="@string/label_uf"
            />

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.Libert.FormInputLayout"
            android:id="@+id/input_layout_cidade"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            >

            <android.support.design.widget.TextInputEditText
                style="@style/Widget.Libert.EditableField"
                android:id="@+id/edit_text_cidade"
                android:hint="@string/hint_cidade"
                android:inputType="text|textCapWords"
                android:imeOptions="actionNext"
                android:maxLines="1"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.Libert.FormInputLayout"
            android:id="@+id/input_layout_cep"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            >

            <android.support.design.widget.TextInputEditText
                style="@style/Widget.Libert.EditableField"
                android:id="@+id/edit_text_cep"
                android:hint="@string/hint_cep"
                android:inputType="numberSigned"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:maxLength="8"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.Libert.FormInputLayout"
            android:id="@+id/input_layout_complemento"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            >

            <android.support.design.widget.TextInputEditText
                style="@style/Widget.Libert.EditableField"
                android:id="@+id/edit_text_complemento"
                android:hint="@string/hint_complemento"
                android:inputType="text|textCapSentences"
                android:imeOptions="actionNext"
                android:maxLines="1"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.Libert.FormInputLayout"
            android:id="@+id/input_layout_telefone"
            >

            <android.support.design.widget.TextInputEditText
                style="@style/Widget.Libert.EditableField"
                android:id="@+id/edit_text_telefone"
                android:drawableLeft="@drawable/vector_ic_phone_grey_24dp"
                android:drawableStart="@drawable/vector_ic_phone_grey_24dp"
                android:drawablePadding="32dp"
                android:hint="@string/hint_telefone"
                android:inputType="phone"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:maxLength="11"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.Libert.FormInputLayout"
            android:id="@+id/input_layout_celular"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            >

            <android.support.design.widget.TextInputEditText
                style="@style/Widget.Libert.EditableField"
                android:id="@+id/edit_text_celular"
                android:hint="@string/hint_celular"
                android:inputType="phone"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:maxLength="11"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

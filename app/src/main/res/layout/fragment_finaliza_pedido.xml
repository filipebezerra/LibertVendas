<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".presentation.pedido.finalizapedido.FinalizaPedidoFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.Libert.FormInputLayout"
            android:id="@+id/input_layout_cliente"
            >

            <android.support.design.widget.TextInputEditText
                style="@style/Widget.Libert.NonEditableField"
                android:id="@+id/edit_text_cliente"
                android:hint="@string/hint_cliente"
                android:drawableLeft="@drawable/vector_ic_people_grey_24dp"
                android:drawableStart="@drawable/vector_ic_people_grey_24dp"
                android:drawablePadding="32dp"
                tools:drawableLeft="@drawable/ic_people_grey_24dp"
                tools:drawableStart="@drawable/ic_people_grey_24dp"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
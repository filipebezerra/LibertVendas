<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".presentation.pedido.finalizapedido.FinalizaPedidoFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.Libert.FormInputLayout"
            android:id="@+id/input_layout_data_emissao"
            >

            <android.support.design.widget.TextInputEditText
                style="@style/Widget.Libert.NonEditableField"
                android:id="@+id/edit_text_data_emissao"
                android:drawableLeft="@drawable/vector_ic_event_grey_24dp"
                android:drawableStart="@drawable/vector_ic_event_grey_24dp"
                android:drawablePadding="32dp"
                android:hint="@string/hint_data_emissao"
                tools:drawableLeft="@drawable/ic_event_grey_24dp"
                tools:drawableStart="@drawable/ic_event_grey_24dp"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.Libert.FormInputLayout"
            android:id="@+id/input_layout_cliente"
            >

            <android.support.design.widget.TextInputEditText
                style="@style/Widget.Libert.NonEditableField"
                android:id="@+id/edit_text_cliente"
                android:hint="@string/hint_cliente"
                android:drawableLeft="@drawable/vector_ic_people_grey_24dp"
                android:drawableStart="@drawable/vector_ic_people_grey_24dp"
                android:drawablePadding="32dp"
                tools:drawableLeft="@drawable/ic_people_grey_24dp"
                tools:drawableStart="@drawable/ic_people_grey_24dp"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.Libert.FormInputLayout"
            android:id="@+id/input_layout_total_produtos"
            >

            <android.support.design.widget.TextInputEditText
                style="@style/Widget.Libert.NonEditableField"
                android:id="@+id/edit_text_total_produtos"
                android:drawableLeft="@drawable/vector_ic_attach_money_grey_24dp"
                android:drawableStart="@drawable/vector_ic_attach_money_grey_24dp"
                android:drawablePadding="32dp"
                android:hint="@string/hint_total_produtos"
                android:text="@string/text_total_produtos"
                tools:drawableLeft="@drawable/ic_attach_money_grey_24dp"
                tools:drawableStart="@drawable/ic_attach_money_grey_24dp"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.Libert.FormInputLayout"
            android:id="@+id/input_layout_desconto"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            >

            <android.support.design.widget.TextInputEditText
                style="@style/Widget.Libert.EditableField"
                android:id="@+id/edit_text_desconto"
                android:hint="@string/hint_desconto"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.Libert.FormInputLayout"
            android:id="@+id/input_layout_observacao"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            >

            <android.support.design.widget.TextInputEditText
                style="@style/Widget.Libert.EditableField"
                android:id="@+id/edit_text_observacao"
                android:hint="@string/hint_observacao"
                android:inputType="textMultiLine|textCapSentences"
                android:imeOptions="actionDone"
                />

        </android.support.design.widget.TextInputLayout>

        <smtchahal.materialspinner.MaterialSpinner
            android:id="@+id/spinner_forma_pagamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            app:ms_multiline="false"
            app:ms_hint="@string/hint_forma_pagamento"
            app:ms_enableFloatingLabel="true"
            app:ms_floatingLabelText="@string/label_forma_pagamento"
            />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
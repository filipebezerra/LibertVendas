<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/title_pref_category_sincronizacao">
        <EditTextPreference
            android:key="@string/key_pref_endereco_servidor"
            android:title="@string/title_pref_endereco_servidor"
            android:inputType="textUri"
            android:persistent="false"
            android:defaultValue="@string/default_value_pref_endereco_servidor"
            android:dialogTitle="@string/dialog_title_pref_endereco_servidor"
            android:summary="@string/summary_pref_endereco_servidor"
            />

        <EditTextPreference
            android:key="@string/key_pref_chave_autenticacao"
            android:title="@string/title_pref_chave_autenticacao"
            android:inputType="text"
            android:persistent="false"
            android:defaultValue="@string/default_value_pref_chave_autenticacao"
            android:dialogTitle="@string/dialog_title_pref_chave_autenticacao"
            android:dialogMessage="@string/dialog_message_pref_chave_autenticacao"
            android:summary="@string/summary_pref_chave_autenticacao"
            />

        <SwitchPreference
            android:key="@string/key_pref_sincronizar_pedido_automaticamente"
            android:title="@string/title_pref_sincronizar_pedido_automaticamente"
            android:defaultValue="true"
            android:summary="@string/summary_pref_sincronizar_pedido_automaticamente"
            />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/title_pref_category_pedido">
        <SwitchPreference
            android:key="@string/key_pref_pode_aplicar_desconto"
            android:title="@string/title_pref_pode_aplicar_desconto"
            android:defaultValue="false"
            android:summary="@string/summary_pref_pode_aplicar_desconto"
            />

        <EditTextPreference
            android:key="@string/key_pref_tabela_preco_padrao"
            android:title="@string/title_pref_tabela_preco_padrao"
            android:inputType="numberSigned"
            android:dialogTitle="@string/dialog_title_pref_tabela_preco_padrao"
            android:summary="@string/summary_pref_tabela_preco_padrao"
            android:enabled="false"
            />
    </PreferenceCategory>

</PreferenceScreen>